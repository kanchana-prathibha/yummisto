<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_cake_detail.xml -->
<!-- res/layout/activity_cake_detail.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mainbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cakeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/cake" />

        <TextView
            android:id="@+id/cakeNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cake Name:"
            android:textColor="@color/headcolor"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/cakeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cake Name"
            android:textSize="20sp"
            android:enabled="false"
            android:textColor="@color/textcolors"
            android:textColorHint="@color/textcolors"
            android:inputType="none"

            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cakePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: (LKR)"
            android:textColor="@color/headcolor"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/cakePriceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/textcolors"
            android:textColorHint="@color/textcolors"
            android:inputType="none"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cakeWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: (kg)"
            android:textColor="@color/headcolor"
            android:textSize="18sp"

            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/cakeWeightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:enabled="false"
            android:textColor="@color/textcolors"
            android:textColorHint="@color/textcolors"
            android:inputType="none"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cakeAvailableQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/headcolor"
            android:text="Available Quantity:"
            android:textSize="18sp"

            android:inputType="none"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/cakeAvailableQuantityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType=""
            android:textColor="@color/textcolors"
            android:textColorHint="@color/textcolors"
            android:enabled="false"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/headcolor"
            android:text="Select Quantity:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Quantity"
            android:inputType="number"
            android:textColor="@color/textcolors"
            android:textColorHint="@color/textcolors"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/btnAddWishList"
                android:text="Add to wish list"
                android:backgroundTint="@color/userbtn"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/btnBuyNow"
                android:text="Buy Now"
                android:backgroundTint="@color/userbtn"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
